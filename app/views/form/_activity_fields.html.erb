<div class="form-group row">
  <%= form.label :title, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-10">
    <%= form.text_field :'details[title]', class: 'form-control', required: true, autocomplete: :off %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :max_score, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-10">
    <%= form.number_field :'details[max_score]', class: 'form-control', required: true %>
  </div>
</div>

<table class="table table-bordered dataTable table-striped table-hover" style="width: 100%;">
  <thead>
      <tr role="row">
        <th rowspan="1" colspan="1" style="width: 173px;">
          Student Name
        </th>
        <th class="text-center" rowspan="1" colspan="1" style="width: 173px;">
          Score
        </th>
      </tr>
  </thead>

  <tbody>

    <% @students.each do |student| %>
      <tr role="row">
        <td>
          <b><%= student.last_name %></b>, <%= student.first_name %>
        </td>
        <td class='d-flex justify-content-center' style="border-color: transparent">
          <input type='number' name="section_students[<%= student.id %>[score]]" class="form-control text-center">
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<div class="form-group">
  <%= form.button type: 'submit', class: 'btn btn-success btn-circle btn-md float-right' do %>
    <i class="fas fa-paper-plane"></i>
  <% end %>
</div>