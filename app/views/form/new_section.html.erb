<div class="row justify-content-center">
<div class="col-xl-8 col-lg-7">

  <h1 class="h3 mb-4 text-gray-800">
    New Section
  </h1>

</div>
</div>

<div class="row justify-content-center">
<div class="col-xl-8 col-lg-7">
<div class="card shadow mb-4 p-4">

<%= form_with url: create_section_path, id: 'create-section-form' do |form| %>

  <div class="form-group row align-items-center">
    <%= form.label :name, 'Name', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= form.text_field :'details[name]', class: 'form-control', required: true, autocomplete: :off %>
    </div>
  </div>

  <div class="form-group row align-items-center">
    <%= form.label :name, 'Grading System', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <select name="grading_system" class="form-control">
        <% @grading_systems.each_with_index do |grading_system, index| %>
          <option value="<%= grading_system.id %>" >Grading System <%= index + 1 %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group row student-row-header">
    <div class="col-sm-12">
      <h3>
        Students
        <%= form.button type: 'button', class: 'btn btn-primary btn-md float-right', id: 'add-student-btn' do %>
        <i class="fas fa-plus-circle"></i> Add Student
        <% end %>
      </h3>
    </div>
  </div>

  <hr>

  <div class="form-group">
    <%= form.button type: 'submit', class: 'btn btn-success btn-circle btn-md float-right' do %>
      <i class="fas fa-paper-plane"></i>
    <% end %>
  </div>

<% end %>

</div>
</div>
</div>

<%= javascript_pack_tag 'new_section', 'data-turbolinks-track': 'reload' %>