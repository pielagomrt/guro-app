<div class="row justify-content-center">
<div class="col-xl-8 col-lg-7">

  <div class="mb-4 text-gray-800 d-flex align-items-end justify-content-between">
    <h1 class="h3">New Attendance</h1>
    <h3 class='text-primary fw-bold h1' style="font-weight: 600"><%= @section.name %></h3>
  </div>

</div>
</div>

<div class="row justify-content-center">
<div class="col-xl-8 col-lg-7">
<div class="card shadow mb-4 p-4">

<%= form_with url: create_attendance_path do |form| %>

  <div class="form-group row">
    <%= form.label :date, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.date_field :'details[date]', class: 'form-control', required: true %>
    </div>
  </div>

  <table class="table table-bordered dataTable table-striped table-hover" style="width: 100%;">
    <thead>
        <tr role="row">
          <th rowspan="1" colspan="1" style="width: 173px;">
            Student Name
          </th>
          <th class="text-center" rowspan="1" colspan="1" style="width: 173px;">
            Present?
          </th>
        </tr>
    </thead>

    <tbody>

      <% @students.each do |student| %>
        <tr role="row">
          <td>
            <b><%= student.last_name %></b>, <%= student.first_name %>
          </td>
          <td class='d-flex justify-content-center' style="border-color: transparent">
            <input type='checkbox' name="section_students[<%= student.id %>]">
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>

  <div class="form-group">
    <%= form.button type: 'submit', class: 'btn btn-success btn-circle btn-md float-right' do %>
      <i class="fas fa-paper-plane"></i>
    <% end %>
  </div>

<% end %>

</div>
</div>
</div>

<div class="d-flex justify-content-center">
  <%= link_to 'GO BACK', view_section_attendances_path(@section.id), class: "btn btn-primary px-4 font-weight-bold" %>
</div><br>
